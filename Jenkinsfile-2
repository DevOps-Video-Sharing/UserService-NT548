pipeline {
    agent any
    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }
    stages {
        stage('Build'){
            steps{
                sh 'docker build -t datuits/userservice-lab:latest .'
            }
        }
        stage('Scan'){
            steps{
                sh 'trivy datuits/userservice-lab:latest'
            }
        }
    }
}
